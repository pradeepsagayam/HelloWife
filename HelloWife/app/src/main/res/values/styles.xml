<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="PinLock">

        <item name="statusEmptyBackground">@drawable/empty_dot</item>
        <item name="statusFilledBackground">@drawable/filled_dot</item>
        <item name="statusDotDiameter">25dp</item>
        <item name="statusDotSpacing">15dp</item>

        <item name="pinLength">4</item>

        <item name="keypadWidth">230dp</item>
        <item name="keypadHeight">280dp</item>
        <item name="keypadHorizontalSpacing">35dp</item>
        <item name="keypadVerticalSpacing">15dp</item>

        <item name="keypadTextSize">8sp</item>
        <item name="keypadTextColor">@color/black</item>
        <item name="keypadButtonShape">@drawable/circle</item>

        <item name="backgroundColor">@color/white</item>

        <item name="cancelTextSize">5sp</item>
        <item name="cancelTextColor">@color/black</item>

        <item name="forgotTextSize">5sp</item>
        <item name="forgotTextColor">@color/black</item>

        <item name="cancelForgetButtonBackground">@drawable/rectangle</item>

        <item name="infoTextSize">8sp</item>
        <item name="infoTextColor">@color/black</item>


    </style>

</resources>
